# Academic Research Tool - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Academic Research Tool"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # Optional, for server-side ops
SUPABASE_JWT_SECRET=your-jwt-secret  # Optional, for JWT verification

# =============================================================================
# Hyperion RAG (LightRAG)
# =============================================================================
HYPERION_MCP_URL=https://n8n-dev-u36296.vm.elestio.app/mcp/hyperion
HYPERION_AUTH_HEADER=  # Authorization header value if required

# =============================================================================
# AI/LLM
# =============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# External APIs
# =============================================================================
SEMANTIC_SCHOLAR_API_KEY=  # Optional, increases rate limit
GROBID_URL=https://kermitt2-grobid.hf.space  # Public GROBID instance

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

